---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Developer Feedback · StrayWatch">
  <div class="min-h-screen bg-gradient-to-br from-slate-950 via-slate-900 to-blue-950 text-white">
    <header class="border-b border-white/10 bg-slate-950/80 backdrop-blur px-4 py-4">
      <div class="container mx-auto flex items-center justify-between">
        <h1 class="text-2xl font-bold">Developer Feedback</h1>
        <a href="/" class="text-sm text-blue-400 hover:text-blue-300">← Back</a>
      </div>
    </header>

    <div class="container mx-auto px-4 py-12 max-w-2xl">
      <div class="rounded-2xl border border-white/10 bg-white/5 backdrop-blur p-8">
        <div class="mb-6">
          <p class="text-sm text-blue-200 uppercase tracking-[0.2em]">Help us improve</p>
          <h2 class="mt-2 text-3xl font-bold">Share your feedback</h2>
          <p class="mt-2 text-white/70">Found a bug? Have a feature idea? Let us know what would make StrayWatch better for developers.</p>
        </div>

        <form id="dev-feedback-form" class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-white/80 mb-2">Category</label>
            <select id="category" class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 text-white focus:outline-none focus:ring-2 focus:ring-blue-500" required>
              <option value="" disabled selected>Select category</option>
              <option value="bug">Bug Report</option>
              <option value="feature">Feature Request</option>
              <option value="api">API Feedback</option>
              <option value="ui">UI/UX Suggestion</option>
              <option value="performance">Performance Issue</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div>
            <label class="block text-sm font-medium text-white/80 mb-2">Title</label>
            <input 
              type="text" 
              id="title"
              placeholder="Brief title of your feedback" 
              class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder:text-white/40 focus:outline-none focus:ring-2 focus:ring-blue-500"
              required
            />
          </div>

          <div>
            <label class="block text-sm font-medium text-white/80 mb-2">Details</label>
            <textarea 
              id="message"
              placeholder="Provide as much detail as you can..." 
              rows="6"
              class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder:text-white/40 focus:outline-none focus:ring-2 focus:ring-blue-500 resize-none"
              required
            ></textarea>
          </div>

          <div>
            <label class="block text-sm font-medium text-white/80 mb-2">Your name (optional)</label>
            <input 
              type="text" 
              id="name"
              placeholder="Your name" 
              class="w-full px-4 py-2 rounded-lg bg-white/10 border border-white/20 text-white placeholder:text-white/40 focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
          </div>

          <button 
            type="submit"
            class="w-full px-6 py-3 mt-6 rounded-lg bg-blue-600 hover:bg-blue-700 text-white font-semibold transition"
          >
            Send Feedback
          </button>

          <div id="status-message" class="hidden rounded-lg border px-4 py-3 text-sm"></div>
        </form>
      </div>
    </div>
  </div>

  <script>
    const form = document.getElementById('dev-feedback-form');
    const statusMsg = document.getElementById('status-message');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const category = (document.getElementById('category') as HTMLSelectElement).value;
      const title = (document.getElementById('title') as HTMLInputElement).value;
      const message = (document.getElementById('message') as HTMLTextAreaElement).value;
      const name = (document.getElementById('name') as HTMLInputElement).value;

      statusMsg.classList.remove('hidden', 'border-green-500', 'bg-green-50', 'text-green-900', 'border-red-500', 'bg-red-50', 'text-red-900');

      try {
        const res = await fetch('/api/feedback', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            name: name || category,
            message: `[${category.toUpperCase()}] ${title}\n\n${message}`,
          }),
        });

        if (!res.ok) {
          const err = await res.json();
          throw new Error(err.error || 'Failed to send');
        }

        statusMsg.classList.add('border-green-500', 'bg-green-50', 'text-green-900');
        statusMsg.textContent = '✓ Thanks! Your feedback has been received.';
        form.reset();
      } catch (error: any) {
        statusMsg.classList.add('border-red-500', 'bg-red-50', 'text-red-900');
        statusMsg.textContent = `✗ Error: ${error.message}`;
      } finally {
        statusMsg.classList.remove('hidden');
      }
    });
  </script>
</Layout>
